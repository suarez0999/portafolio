---
import Layout from "@layouts/Layout.astro";
import SectionTitle from "@ui/SectionTitle.astro";
import SectionContainer from "@ui/SectionContainer.astro";
import Home from "@components/Home.astro";
import Navbar from "@components/Navbar.astro";
import Skills from "@components/Skills.astro";
import Contact from "@components/Contact.astro";
import ProjectCard from "@components/FeaturedProjects.astro";
import Experience from "@components/Experience.astro";
import About from "@components/AboutMe.astro";
import Footer from "@components/Footer.astro";
import BriefcaseIcon from "@components/icons/BriefcaseIcon.astro";
import BulbIcon from "@components/icons/BulbIcon.astro";
import UserIcon from "@components/icons/UserIcon.astro";
---

<Layout>
  <!-- <Navbar /> -->
  <Navbar />

  <!-- Section Home -->
  <SectionContainer id="home" class="py-16 md:py-28">
    <!-- Content -->
    <Home />
  </SectionContainer>

  <!-- Section Experience -->
  <SectionContainer id="experience" class="py-6 md:py-16">
    <!-- Title -->
    <SectionTitle>
      <BriefcaseIcon class="size-8" />
      Experiencia Laboral
    </SectionTitle>
    <!-- Content -->
    <Experience />
  </SectionContainer>

  <SectionContainer id="projects" class="py-6 md:py-16">
    <SectionTitle> Featured projects </SectionTitle>

    <ProjectCard />
  </SectionContainer>
  <SectionContainer id="skills" class="py-6 md:py-16">
    <SectionTitle>
      <BulbIcon class="size-8" />
      Tecnolog√≠as
    </SectionTitle>
    <Skills />
  </SectionContainer>
  <SectionContainer id="about" class="py-6 md:py-16">
    <SectionTitle>
      <UserIcon class="size-8" />
      Sobre mi
    </SectionTitle>
    <About />
  </SectionContainer>
  <Contact />

  <!-- footer -->
  <Footer />
</Layout>
