---
import Introduction from "@branding/Introduction.astro";
import Header from "@branding/Header.astro";
import TitleOne from "@branding/TitleOne.astro";
import Layout from "@layouts/Layout.astro";
import WhoWeAre from "@branding/WhoWeAre.astro";
import MissionVision from "@branding/MissionVision.astro";
import DNA from "@branding/DNA.astro";
import Public from "@branding/Public.astro";
---

<Layout>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Kapakana:wght@300..400&family=Inter:wght@400;500;700&display=swap");

    :root {
      --font-heading: "Kapakana", sans-serif;
      --font-body: "Inter", sans-serif;
    }
  </style>

  <section class="max-w-7xl mx-auto px-6 py-20 space-y-24">
    <Header />
    <Introduction />
    <TitleOne />
    <WhoWeAre />
    <MissionVision />
    <DNA />
    <Public />
    <section>
      <!-- Sección: Versiones del Logo -->
      <section data-aos="fade-up">
        <h2
          class="text-2xl font-bold tracking-wide uppercase border-b pb-2 mb-8"
          style="font-family: var(--font-body)"
        >
          Versiones del Logo
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-10">
          <div class="flex flex-col items-center">
            <div
              class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center w-48 h-48 p-4"
            >
              <img src="/LogoPorfolioColor.svg" alt="Logo Color" />
            </div>
            <p class="mt-4 font-medium" style="font-family: var(--font-body)">
              Versión Color
            </p>
          </div>
          <div class="flex flex-col items-center">
            <div
              class="bg-black rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center w-48 h-48 p-4"
            >
              <img src="/LogoPorfolioNegativo.svg" alt="Logo Negativo" />
            </div>
            <p class="mt-4 font-medium" style="font-family: var(--font-body)">
              Versión Negativa
            </p>
          </div>
          <div class="flex flex-col items-center">
            <div
              class="bg-gray-100 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center w-48 h-48 p-4"
            >
              <img src="/LogoPorfolioPositivo.svg" alt="Logo Positivo" />
            </div>
            <p class="mt-4 font-medium" style="font-family: var(--font-body)">
              Versión Positiva
            </p>
          </div>
        </div>
      </section>

      <div class="border-t border-gray-200"></div>

      <!-- Sección: Paleta de Colores -->
      <section data-aos="fade-up">
        <h2
          class="text-2xl font-bold tracking-wide uppercase border-b pb-2 mb-8"
          style="font-family: var(--font-body)"
        >
          Paleta de Colores
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-10 text-center">
          <div>
            <div class="w-20 h-20 bg-blue-600 rounded-full mx-auto shadow-lg">
            </div>
            <p class="mt-3 font-medium">#2563EB</p>
            <p class="text-sm text-gray-500">RGB(37, 99, 235)</p>
          </div>
          <div>
            <div class="w-20 h-20 bg-black rounded-full mx-auto shadow-lg">
            </div>
            <p class="mt-3 font-medium">#000000</p>
            <p class="text-sm text-gray-500">RGB(0, 0, 0)</p>
          </div>
          <div>
            <div
              class="w-20 h-20 bg-gray-100 rounded-full mx-auto border shadow-sm"
            >
            </div>
            <p class="mt-3 font-medium">#F3F4F6</p>
            <p class="text-sm text-gray-500">RGB(243, 244, 246)</p>
          </div>
          <div>
            <div class="w-20 h-20 bg-red-600 rounded-full mx-auto shadow-lg">
            </div>
            <p class="mt-3 font-medium">#DC2626</p>
            <p class="text-sm text-gray-500">RGB(220, 38, 38)</p>
          </div>
        </div>
      </section>

      <div class="border-t border-gray-200"></div>

      <!-- Sección: Tipografía -->
      <section data-aos="fade-up">
        <h2
          class="text-2xl font-bold tracking-wide uppercase border-b pb-2 mb-8"
          style="font-family: var(--font-body)"
        >
          Tipografía Oficial
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-10">
          <div class="p-6 bg-white shadow-lg rounded-2xl">
            <h3
              class="text-xl font-bold mb-2"
              style="font-family: var(--font-heading)"
            >
              Encabezados – Kapakana
            </h3>
            <p class="text-gray-600" style="font-family: var(--font-heading)">
              The quick brown fox jumps over the lazy dog
            </p>
          </div>
          <div class="p-6 bg-white shadow-lg rounded-2xl">
            <h3
              class="text-xl font-bold mb-2"
              style="font-family: var(--font-body)"
            >
              Cuerpo de texto – Inter
            </h3>
            <p class="text-gray-600" style="font-family: var(--font-body)">
              The quick brown fox jumps over the lazy dog
            </p>
          </div>
        </div>
      </section>

      <div class="border-t border-gray-200"></div>

      <!-- Sección: Usos Correctos e Incorrectos -->
      <section data-aos="fade-up">
        <h2
          class="text-2xl font-bold tracking-wide uppercase border-b pb-2 mb-8"
          style="font-family: var(--font-body)"
        >
          Usos Correctos e Incorrectos
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-10">
          <div
            class="p-4 bg-green-50 border border-green-200 rounded-2xl shadow-sm"
          >
            <img src="/LogoCorrecto.svg" alt="Uso Correcto" class="mx-auto" />
            <p class="mt-4 text-green-700 font-medium text-center">Correcto</p>
          </div>
          <div
            class="p-4 bg-red-50 border border-red-200 rounded-2xl shadow-sm"
          >
            <img
              src="/LogoIncorrecto.svg"
              alt="Uso Incorrecto"
              class="mx-auto"
            />
            <p class="mt-4 text-red-700 font-medium text-center">Incorrecto</p>
          </div>
        </div>
      </section>
    </section>
  </section></Layout
>
