---
import SectionTitle from "@ui/SectionTitle.astro";
import SectionContainer from "@ui/SectionContainer.astro";
import Card from "@components/Project.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <SectionContainer class="py-16 md:py-36 text-center">
    <h1 class="text-3xl font-bold text-slate-800">Mis Proyectos</h1>
    <p class="mt-4 text-lg text-gray-600">
      Aquí puedes encontrar una selección de mis proyectos más recientes.
    </p>

    <section class="flex flex-row justify-center items-center gap-4 row-span-2">
      <a
        class="group mt-4 rounded-lg bg-slate-800 py-3 px-8 text-sm text-white flex items-center gap-3 transform hover:scale-105 hover:shadow-2xl hover:bg-slate-700 focus:ring-4 focus:ring-slate-500 transition-all duration-500"
        type="button"
        href="/"
      >
        <span class="group-hover:text-indigo-400 transition-colors duration-300"
          >Atras</span
        >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 group-hover:translate-x-2 group-hover:rotate-45 transition-transform duration-300"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </a>
    </section>
  </SectionContainer>

  <SectionContainer class="py-6 md:py-16">
    <SectionTitle>Proyectos Backend</SectionTitle>

    <Card title="Proyecto 1" description="Descripción del proyecto 1" />
  </SectionContainer>
  <SectionContainer class="py-6 md:py-16">
    <SectionTitle>Proyectos Fronten</SectionTitle>

    <Card title="Proyecto 1" description="Descripción del proyecto 1" />
  </SectionContainer>
</Layout>
