---
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Meta Caracteres -->
    <meta charset="UTF-8" />

    <!-- Vista para dispositivos móviles -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon para mayor accesibilidad -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Etiquetas de Metadatos para SEO -->
    <meta name="generator" content="Astro" />
    <meta name="author" content="Diego Suarez" />

    <!-- Descripción -->
    <meta
      name="description"
      content="Portfolio de Diego Suarez, desarrollador Full Stack especializado en crear experiencias digitales excepcionales con tecnologías modernas."
    />

    <!-- Palabras clave -->
    <meta
      name="keywords"
      content="Diego Suarez, desarrollador software, full stack developer, portfolio, experiencias digitales, tecnologías modernas, soluciones escalables, desarrollo web, desarrollo full stack, desarrollador front end, desarrollador back end"
    />

    <!-- Indexación y Rastreo -->
    <meta name="robots" content="index, follow" />
    <meta
      name="canonical"
      content="https://porfolio-diego-suarez.netlify.app"
    />

    <!-- Open Graph (OG) Meta Tags -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Portfolio - Diego Suarez, Desarrollador Full-Stack"
    />
    <meta
      property="og:description"
      content="Portfolio de Diego Suarez, desarrollador Full Stack especializado en crear experiencias digitales excepcionales con tecnologías modernas."
    />
    <meta
      property="og:url"
      content="https://porfolio-diego-suarez.netlify.app"
    />
    <meta property="og:image" content="/images/Portada.webp" />
    <meta property="og:locale" content="es_CO" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Portfolio - Diego Suarez, Desarrollador Full-Stack"
    />
    <meta
      name="twitter:description"
      content="Portfolio de Diego Suarez, desarrollador Full Stack especializado en crear experiencias digitales excepcionales con tecnologías modernas."
    />
    <meta name="twitter:image" content="/images/Portada.webp" />

    <!-- Título de la Página -->
    <title>Portfolio - Diego Suarez, Desarrollador Full-Stack</title>

    <!-- Sumario visible en la página -->
    <meta
      name="description"
      content="Portfolio de Diego Suarez - Desarrollador Full Stack apasionado por crear experiencias digitales excepcionales. Especializado en tecnologías modernas y soluciones escalables."
    />
  </head>

  <body>
    <slot />
    <!-- footer -->
    <Footer />
  </body>
</html>

<style>
  html,
  * {
    margin: 0;
    padding: 0;
    font-family: "PoppinsFont", sans-serif;
    box-sizing: border-box;
  }

  body {
    @apply bg-gray-200 text-gray-800 dark:bg-gray-900 dark:text-gray-200;
    width: 100%;
    height: 100%;
  }
  body::-webkit-scrollbar {
    width: 12px;
  }

  body::-webkit-scrollbar-track {
    background: transparent;
  }

  body::-webkit-scrollbar-thumb {
    background: #0b2c6f;
    border-radius: 10px;
  }

  @font-face {
    font-family: "MonserratFont";
    src: url("/src/fonts/Montserrat-Regular.ttf") format("truetype");
    font-weight: 400; /* Regular */
    font-style: normal;
  }
  @font-face {
    font-family: "OpenSansFont";
    src: url("/src/fonts/OpenSans_Condensed-Regular.ttf") format("truetype");
    font-weight: 400; /* regular */
    font-style: normal;
  }
  @font-face {
    font-family: "PoppinsFont";
    src: url("/src/fonts/Poppins-Regular.ttf") format("truetype");
    font-weight: 400; /* regular */
    font-style: normal;
  }
  @font-face {
    font-family: "MarykateFont";
    src: url("/src/fonts/FontsFree-Net-Marykate-Regular.ttf") format("woff2");
    font-weight: normal;
    font-style: normal;
  }
</style>
