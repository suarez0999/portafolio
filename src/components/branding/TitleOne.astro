---
import SectionBranding from "@components/ui/SectionBranding.astro";
---

<SectionBranding 
  id="brand-section" 
  class="relative py-16 px-6 md:px-12 lg:px-20 bg-white dark:bg-gray-900"
  aria-labelledby="brand-title"
>
  <div class="text-left">
    <!-- Número con outline (decorativo) -->
    <div class="relative inline-block" aria-hidden="true">
      <span 
        class="block text-[clamp(3rem,10vw,9rem)] font-bold text-transparent stroke-red-600"
        style="-webkit-text-stroke: 2px #dc2626;"
      >
        01
      </span>
      <!-- Línea inferior -->
      <div class="h-[3px] w-16 sm:w-32 md:w-48 bg-red-600 -mt-4"></div>
    </div>

    <!-- Título -->
    <h2 
      id="brand-title"
      class="mt-6 text-[clamp(2rem,6vw,6rem)] font-extrabold text-red-600"
      data-aos="fade-up"
      data-aos-delay="200"
    >
      Marca
    </h2>
  </div>
</SectionBranding>
