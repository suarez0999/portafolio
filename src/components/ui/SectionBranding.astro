---
interface Props {
  id?: string;
  class?: string;
  as?: keyof HTMLElementTagNameMap; // permite cambiar <section> por <header>, <footer>, etc.
  fullHeight?: boolean; // opcional para min-h-screen
  ariaLabel?: string;
}

const {
  id,
  class: className = "",
  as: Tag = "section",
  fullHeight = false,
  ariaLabel
} = Astro.props;
---

<Tag
  id={id}
  data-section={id}
  aria-label={ariaLabel}
  class={`${className} ${fullHeight ? "min-h-screen" : ""} flex flex-col px-6 md:px-10 lg:px-20 py-12 bg-white dark:bg-gray-900 rounded-lg`}
>
  <slot />
</Tag>
