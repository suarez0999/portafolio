// Datos de ejemplo
const projects = [
  {
    imageUrl: "/images/Portada.webp",
    imageAlt: "Vista previa del proyecto 1",
    title: "Proyecto 1",
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolor non error neque expedita ab adipisci est tempore quibusdam.",
    skills: [
