---
import GitIcon from "./icons/GitIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-200 dark:bg-gray-900 border-t border-gray-300 dark:border-gray-700">
  <div class="mx-auto max-w-screen-xl p-6 lg:py-8 flex flex-col md:flex-row md:items-center md:justify-between">
    <!-- Texto y Créditos -->
    <div class="text-center md:text-left">
      <span class="text-sm text-gray-500 dark:text-gray-400 block">
        © {currentYear} Todos los derechos reservados.
      </span>
      <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
        Créditos a <a href="https://midudev.com" class="text-blue-600 hover:underline dark:text-blue-400">midudev</a> 
      </p>
    </div>

    <!-- Redes Sociales -->
    <div class="mt-6 md:mt-0 flex space-x-6 justify-center md:justify-end">
      <a
        href="https://linkedin.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-gray-900 dark:hover:text-white transition"
      >
        <LinkedinIcon class="h-6 w-6" />
        <span class="sr-only">LinkedIn</span>
      </a>
      <a
        href="https://github.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-gray-900 dark:hover:text-white transition"
      >
        <GitIcon class="h-6 w-6" />
        <span class="sr-only">GitHub</span>
      </a>
    </div>
  </div>
</footer>
