---
import GitHubIcon from "@icons/GitHubIcon.astro";
import LinkedinIcon from "@icons/LinkedinIcon.astro";
const currentYear = new Date().getFullYear();
import LogoVertical from "@ui/logoVertical.astro";
---

<footer class="bg-gray-100 dark:bg-gray-900 border-t border-gray-300 dark:border-gray-700">
  <div class="mx-auto max-w-screen-xl p-6 lg:py-8 flex flex-col md:flex-row md:items-center md:justify-between space-y-6 md:space-y-0">
    
    <!-- Logo -->
    <div class="flex justify-center md:justify-start">
      <LogoVertical />
    </div>

    <!-- Texto y Créditos -->
    <div class="text-center md:text-left">
      <span class="text-sm text-gray-600 dark:text-gray-400 block">
         {currentYear} | Diego Suárez
      </span>
      <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
        Inspirado por <a href="https://midudev.com" class="text-blue-600 hover:underline dark:text-blue-400">midudev</a>
      </p>
    </div>

    <!-- Redes Sociales -->
    <div class="flex justify-center md:justify-end space-x-4">
      <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 transition">
        <LinkedinIcon class="h-6 w-6" />
        <span class="sr-only">LinkedIn</span>
      </a>
      <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-gray-900 dark:hover:text-white transition">
        <GitHubIcon class="h-6 w-6" />
        <span class="sr-only">GitHub</span>
      </a>
    </div>

  </div>
</footer>
