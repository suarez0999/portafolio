{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@branding/*": ["src/components/branding/*"],
      "@ui/*": ["src/components/ui/*"],
      "@icons/*": ["src/components/icons/*"],
      "@images/*": ["public/images/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
    },
  }
}

